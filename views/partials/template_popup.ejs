<div class="modal fade  bd-example-modal-sm" id="popup-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    <% if ( popup.type === 'INFO') { %>
                        <span>Information</span>
                    <% }else if ( popup.type === 'WARN'){ %>
                        <span>Warning</span>
                    <% }else if ( popup.type === 'ERROR'){ %>
                        <span>Error</span>
                    <% } %>
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p>
                    <%= popup.message %>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Confirm</button>
            </div>

        </div>
    </div>
</div>

<script nonce= "<%= locals.nonce%>">
    $(window).on('load', function () {
        $('#popup-modal').modal('show');
    });
</script>